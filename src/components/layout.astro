---
import './global.css'
import Footer from './footer.astro'
import Head from './head.astro'
import Header from './header.astro'

type Props = {
  title?: string
  description?: string
  image?: ImageMetadata
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang="ja">
	<Head title={title} description={description} image={image} />
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
</style>
